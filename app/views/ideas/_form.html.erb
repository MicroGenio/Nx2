
<% if @idea.errors.any? %>
    <div class-"row">
        <div class-"alert alert-danger col-md-8 col-md-offset-2">
            <h5>Please correct the following errors:</h5>
            <ul> 
                <% @idea.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>

<div class="row">
    <div class="well col-md-8 col-md-offset-2">
        <%= form_for @idea do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>
            
            <%= f.label :summary %>
            <%= f.text_field :summary %>
            
            <%= f.label :description %>
            <%= f.text_area :description, row: 10 %>
            
            <%= f.submit(@idea.new_record? ? 'Create Idea' : 'Edit Idea', class: "btn btn-success") %>
        <% end %>
    </div>
</div>